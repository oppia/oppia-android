# TODO(#1617): Remove genrules post-gradle
[
    genrule(
        name = "update_" + file[0:-3],
        srcs = [file],
        outs = [file[0:-3] + "_updated.kt"],
        cmd = """
     cat $(SRCS) |
     sed 's/import org.oppia.android.R/import org.oppia.android.app.databinding.R/g' > $(OUTS)
     """,
    )
    for file in _TEST_FILES
]


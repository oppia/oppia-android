<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <variable
      name="isListExpanded"
      type="Boolean" />

    <variable
      name="viewModel"
      type="org.oppia.android.app.hintsandsolution.HintsViewModel" />
  </data>

  <LinearLayout
    android:id="@+id/hint_summary_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/hint_summary_hint_constraint_layout_marginStart"
      android:layout_marginEnd="@dimen/hint_summary_hint_constraint_layout_marginEnd"
      android:paddingBottom="@dimen/hint_summary_hint_constraint_layout_paddingBottom">

      <TextView
        android:id="@+id/hint_title"
        style="@style/Heading2"
        android:textColor="@color/oppia_primary_text"
        android:layout_marginTop="@dimen/hint_summary_hint_title_layout_marginTop"
        android:paddingBottom="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <Button
        android:id="@+id/reveal_hint_button"
        style="@style/StateButtonActive"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="@dimen/hint_summary_reveal_hint_button_layout_marginBottom"
        android:background="@drawable/reveal_hint_button_blue_background"
        android:minWidth="160dp"
        android:minHeight="48dp"
        android:text="@string/reveal_hint"
        android:visibility="@{viewModel.isHintRevealed? View.GONE : View.VISIBLE}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint_title" />

      <FrameLayout
        android:id="@+id/expand_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hint_summary_expand_list_icon_layout_marginStart"
        android:layout_marginBottom="@dimen/hint_summary_expand_list_icon_layout_marginBottom"
        android:visibility="@{viewModel.isHintRevealed? View.VISIBLE : View.GONE}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
          android:id="@+id/hint_list_drop_down_icon"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_gravity="center_vertical"
          android:contentDescription="@{viewModel.computeHintListDropDownIconContentDescription()}"
          android:padding="8dp"
          app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
          app:isRotationAnimationClockwise="@{isListExpanded}"
          app:rotationAnimationAngle="@{180f}" />
      </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
      android:id="@+id/hint_list_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/hint_summary_hint_list_container_layout_marginStart"
      android:layout_marginEnd="@dimen/hint_summary_hint_list_container_layout_marginEnd"
      android:layout_marginBottom="32dp"
      android:orientation="vertical"
      android:visibility="@{isListExpanded? View.VISIBLE : View.GONE}">

      <TextView
        android:id="@+id/hints_and_solution_summary"
        style="@style/Heading4"
        android:textColor="@color/oppia_primary_text"
        android:layout_gravity="start"/>
    </LinearLayout>
  </LinearLayout>
</layout>

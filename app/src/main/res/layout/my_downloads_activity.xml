<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/download_activity_drawer_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

<LinearLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <include
    android:id="@+id/download_activity_toolbar"
    layout="@layout/toolbar" />

  <FrameLayout
    android:id="@+id/download_fragment_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>

  <fragment
    android:id="@+id/my_downloads_fragment_placeholder"
    android:name="org.oppia.app.drawer.NavigationDrawerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:layout="@layout/drawer_fragment"
    tools:layout="@layout/drawer_fragment" />
</androidx.drawerlayout.widget.DrawerLayout>

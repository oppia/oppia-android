<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oppiaGreyBackground"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:paddingBottom="@dimen/terms_of_service_single_activity_scroll_padding_bottom"
    android:scrollbars="none">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:paddingStart="@dimen/terms_of_service_single_padding_start"
      android:paddingTop="@dimen/terms_of_service_single_padding_top"
      android:paddingEnd="@dimen/terms_of_service_single_padding_end"
      android:paddingBottom="@dimen/terms_of_service_single_padding_bottom">

      <TextView
        android:id="@+id/terms_of_service_description_text_view"
        style="@style/Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:justificationMode="inter_word"
        android:textAlignment="viewStart"
        android:textColor="@color/oppiaPrimaryText" />

      <TextView
        android:id="@+id/terms_of_service_web_link_text_view"
        style="@style/Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="viewStart"
        android:textColor="@color/oppiaPrimaryText" />
    </LinearLayout>
  </ScrollView>
</layout>

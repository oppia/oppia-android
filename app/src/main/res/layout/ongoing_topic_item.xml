<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="android.view.View" />

    <import type="org.oppia.android.app.model.Topic" />

    <variable
      name="viewModel"
      type="org.oppia.android.app.ongoingtopiclist.OngoingTopicItemViewModel" />
  </data>

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/topic_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ongoing_topic_item_container_margin_start"
    android:layout_marginTop="@dimen/ongoing_topic_item_container_margin_top"
    android:layout_marginEnd="@dimen/ongoing_topic_item_container_margin_end"
    android:layout_marginBottom="@dimen/ongoing_topic_item_container_margin_bottom"
    android:clickable="true"
    android:focusable="true"
    android:onClick="@{(v) -> viewModel.onTopicItemClicked()}"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <org.oppia.android.app.customview.LessonThumbnailImageView
        android:id="@+id/topic_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        app:entityId="@{viewModel.topic.topicId}"
        app:entityType="@{viewModel.entityType}"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lessonThumbnail="@{viewModel.topic.topicThumbnail}" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/component_color_shared_topic_card_item_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topic_thumbnail">

        <TextView
          android:id="@+id/topic_name_text_view"
          style="@style/TextViewStart"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/ongoing_topic_item_topic_name_text_view_margin_start"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="@dimen/ongoing_topic_item_topic_name_text_view_margin_end"
          android:ellipsize="end"
          android:fontFamily="sans-serif"
          android:gravity="start"
          android:lines="2"
          android:text="@{viewModel.topicTitle}"
          android:textColor="@color/component_color_shared_topic_card_text_view_color"
          android:textSize="14sp"
          android:textStyle="bold"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/story_count_text_view"
          style="@style/TextViewStart"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:fontFamily="sans-serif-light"
          android:paddingBottom="12dp"
          android:text="@{viewModel.computeStoryCountText()}"
          android:textColor="@color/component_color_shared_topic_card_text_view_color"
          android:textSize="14sp"
          android:textStyle="italic"
          app:layout_constraintEnd_toEndOf="@id/topic_name_text_view"
          app:layout_constraintStart_toStartOf="@id/topic_name_text_view"
          app:layout_constraintTop_toBottomOf="@+id/topic_name_text_view" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/topic_downloaded_message"
      style="@style/Heading4"
      android:layout_marginStart="52dp"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="52dp"
      android:gravity="center"
      android:text="@{String.format(@string/topic_info_downloaded_message, 1)}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@string/topic_info_downloaded_message" />

    <Button
      android:id="@+id/view"
      style="@style/StateButtonActive"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginStart="52dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="52dp"
      android:text="View"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/topic_downloaded_message" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <variable
      name="viewModel"
      type="org.oppia.app.walkthrough.topiclist.WalkthroughTopicViewModel" />
    <variable
      name="headerViewModel"
      type="org.oppia.app.walkthrough.topiclist.topiclistviewmodel.WalkthroughTopicHeaderViewModel" />

  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
      android:id="@+id/walkthrough_topic_header_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginEnd="28dp"
      android:layout_marginBottom="16dp"
      android:fontFamily="sans-serif-medium"
      android:text="@string/what_do_you_want_to_learn"
      android:textColor="@color/oppiaPrimaryText"
      android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/walkthrough_topic_recycler_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:overScrollMode="never"
      android:paddingTop="36dp"
      android:paddingBottom="@dimen/bottom_white_space"
      android:scrollbars="none"
      app:data="@{viewModel.walkthroughTopicViewModelLiveData}" />
  </LinearLayout>
</layout>

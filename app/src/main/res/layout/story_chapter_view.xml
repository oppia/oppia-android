<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
      name="chapterSummary"
      type="org.oppia.app.model.ChapterSummary" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
      android:id="@+id/chapter_thumbnail"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/chapter_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{chapterSummary.getName()}"
      app:layout_constraintStart_toEndOf="@id/chapter_thumbnail"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/chapter_summary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{chapterSummary.getSummary()}"
      app:layout_constraintStart_toEndOf="@id/chapter_thumbnail"
      app:layout_constraintTop_toBottomOf="@id/chapter_title" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="org.oppia.app.R" />

    <variable
      name="presenter"
      type="org.oppia.app.testing.ContentCardTestActivityPresenter" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/state_fragment_placeholder">

    <Button
      android:id="@+id/play_exploration_button1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="328dp"
      android:onClick="playExplorationButton_1"
      android:text="Play exploration"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Button
      android:id="@+id/play_exploration_button2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="68dp"
      android:layout_marginBottom="300dp"
      android:onClick="@{presenter::playExplorationButton_2"
      android:text="Play exploration 2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.52"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/play_exploration_button1"
      app:layout_constraintVertical_bias="0.0" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

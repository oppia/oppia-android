<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <variable
      name="viewModel"
      type="org.oppia.android.app.help.thirdparty.LicenseTextViewModel" />
  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/component_color_shared_screen_tertiary_background_color">

    <TextView
      android:id="@+id/copyright_license_text_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:autoLink="web"
      android:background="@color/component_color_shared_content_container_background_color"
      android:padding="32dp"
      android:text="@{viewModel.licenseText}"
      android:textColor="@color/color_palette_secondary_1_text_color" />
  </ScrollView>
</layout>

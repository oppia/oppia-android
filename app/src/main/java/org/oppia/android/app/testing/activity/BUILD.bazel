    srcs = [
        "TestActivity.kt",
    ],
    visibility = ["//:oppia_testing_visibility"],
    deps = [
        "//app/src/main/java/org/oppia/android/app/activity:activity_intent_factories_shim",
        "//app/src/main/java/org/oppia/android/app/activity:injectable_app_compat_activity",

"""
Package for test-specific platform parameter utilities and helpers.
"""

load("@dagger//:workspace_defs.bzl", "dagger_rules")
load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_android_library")

kt_android_library(
    name = "test_constants",
    testonly = True,
    srcs = [
        "TestBooleanPlatformParameter.kt",
        "TestIntegerPlatformParameter.kt",
        "TestStringPlatformParameter.kt",
    ],
    visibility = [
        "//:oppia_testing_visibility",
    ],
    deps = [
        "//third_party:javax_inject_javax_inject",
    ],
)

kt_android_library(
    name = "test_module",
    testonly = True,
    srcs = [
        "TestPlatformParameterModule.kt",
    ],
    visibility = [
        "//:oppia_testing_visibility",
    ],
    deps = [
        ":dagger",
        ":test_constants",
        "//utility",
    ],
)

dagger_rules()

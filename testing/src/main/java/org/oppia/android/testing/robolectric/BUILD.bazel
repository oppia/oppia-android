    ],
    visibility = [
        "//testing/src/test/java/org/oppia/android/testing/robolectric:__pkg__",
        "//utility/src/test/java/org/oppia/android/util/locale:__pkg__",
        "//utility/src/test/java/org/oppia/android/util/locale/testing:__pkg__",

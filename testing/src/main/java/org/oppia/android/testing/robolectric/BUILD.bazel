kt_android_library(
    name = "test_module",
    testonly = True,
    srcs = [
        "RobolectricModule.kt",
    ],
    visibility = ["//:oppia_testing_visibility"],
    deps = [
        ":dagger",
        ":is_on_robolectric",
    ],
)

